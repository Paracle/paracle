---
import Layout from "../layouts/Layout.astro";
import heroImage from "../components/images/hero.jpg";
import AboutImage from "../components/images/about pics.jpg";
import { Image } from "astro:assets";
import Navbar from "./navbar.astro";
---

<Layout title="">
  <main>
    <div class="herobg-img">
      {/*Navbar */}
      <div class="nav">
        <Navbar color="black" background={false} logo={false} svgcolor="white" />
      </div>

      {/*hero text */}

      <div class="hero-text">
        <div class="headings">
          <h1>
            World Class Excellence in <b style="">Consultancy</b>
          </h1>
          <p>
            We make the greatest impact through collaboration with our clients, as our diverse,
            global teams help organizations tackle the most urgent dynamic challenges
          </p>
          <button
            ><a href="/services" style=" text-decoration: none;">Checkout our services</a></button
          >
        </div>
        <div class="world-map">
          <!-- <div class="world-map-globe"></div> -->
          <div class="heroimg">
            <Image
              src={AboutImage}
              width={400}
              height={500}
              alt="image of a desk with an arm on a computer"
            />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  main {
    /* background-image: url("../components/images/biz.jpeg"); */
    background:
      radial-gradient(ellipse, white 10%, white 50%, transparent 50.5%) 0 0 / 100vmin 100vmin,
      repeating-linear-gradient(
          90deg,
          transparent,
          transparent 0% 15%,
          rgba(128, 128, 128, 0.2) 2% 15.1%
        )
        0 0 / 50% 100%,
      repeating-linear-gradient(transparent, transparent 0% 15%, rgba(128, 128, 128, 0.2) 2% 15.1%)
        0 0 / 50% 100%;
    backdrop-filter: blur(30px);
    width: 100%;
    height: 100vh;
    background-repeat: no-repeat;
    position: relative;
  }

  main::before {
    content: "";
    width: 100%;
    height: 100%;
    background:
      radial-gradient(ellipse at bottom, rgba(240, 255, 192, 0.3) 10%, transparent 50%) 30% 100% /
        100vmin 100vmin no-repeat,
      radial-gradient(ellipse, rgba(192, 255, 207, 0.3) 10%, transparent 50%) 80% 100% / 100vmin
        100vmin no-repeat,
      radial-gradient(ellipse at left, rgba(192, 234, 255, 0.3) 10%, transparent 50%) 0 100% /
        200vmin 100vmin no-repeat;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 1;
    mix-blend-mode: multiply;
  }

  .hero-text h1 {
    font-size: calc(3.8rem + 8px);
    z-index: 9999;
    margin-top: 0;
    margin-bottom: 0;
    /* background: linear-gradient(60deg, blue 20%, orange 50%);
    background-clip: text;
    -webkit-text-fill-color: transparent; */
    position: relative;
    line-height: 1;
  }

  .hero-text {
    width: 80%;
    margin: 0 auto;
    z-index: 10;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 20px;
    padding-bottom: 0px;

    position: relative;

    & button {
      padding: 18px 20px;
      border: none;
      font-size: 16px;
      font-weight: 800;
      background: linear-gradient(cyan, blue);
      border-radius: 25% 25% / 100% 100%;
      width: 40%;
      position: relative;
      cursor: pointer;
    }

    & button a {
      color: white;
    }

    & p {
      line-height: 1.6;
      width: 80%;
    }
  }

  .hero-text .headings {
    width: 50%;
    align-items: start;
    justify-content: center;
    display: flex;
    flex-flow: column;
    gap: 30px;
  }

  .world-map {
    width: 50%;
    display: flex;
    justify-content: end;
  }

  .heroimg img {
    border-radius: 99px;
    object-fit: cover;
    position: relative;
  }

  .heroimg::after {
    position: absolute;
    content: "";
    top: 0;
    left: 46rem;
    border-radius: 99px;
    width: 35%;
    height: 100%;
    background: black;
    transform: rotate(10deg);
    z-index: -99;
  }

  .world-map-globe {
    height: 450px;
    width: 80%;
    filter: invert();
    z-index: 9;
    border-radius: 50%;
    background-image: url("../components/images/map.png");
    box-shadow: 150px 15px 80px 10px rgba(0, 0, 0, 0.9) inset;
    box-shadow: 20px 10px 40px rgba(255, 255, 255, 0.3) inset;
    animation: world 10s linear alternate infinite;
    background-repeat: repeat-x;
    background-size: cover;
    background-position: top;
    transition: all 1s;
  }

  .nav {
    margin: 0 auto;
  }

  .headings h1 {
    position: relative;
    animation: enter 3s linear forwards;
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
  }

  .headings p {
    animation: reveal 3s 300ms linear forwards;
    opacity: 1;
    transition: opacity 1s ease-in;
  }

  .headings button {
    animation: reveal 3s 900ms linear forwards;
    opacity: 1;
    transition: opacity 1s ease-in;
  }

  @keyframes enter {
    0% {
      clip-path: polygon(0 0, 0 0, 0 100%, 0 100%);
    }
    100% {
      clip-path: polygon(0 0, 100% 0, 100% 100%, 0 100%);
    }
  }

  @keyframes reveal {
    100% {
      opacity: 1;
    }
  }

  @keyframes world {
    0% {
      background-position: 0 0;
    }
    100% {
      background-position: 90%;
    }
  }

  @media screen and (max-width: 800px) {
    .hero-text {
      margin: 0 24px;
      z-index: 10;
      display: flex;
      flex-direction: column;
      margin-top: 50px;
      padding-bottom: 60px;
      color: white;
      position: relative;
      width: auto;

      & button {
        padding: 16px 20px;
        border: none;
        font-size: 16px;
        font-weight: 800;
        background-color: orange;
        color: white;
        border-radius: 20px;
        width: auto;
        margin: 0;
      }
    }

    .hero-text .headings {
      width: 100%;
      align-items: start;
      display: flex;
      flex-flow: column;
      gap: 30px;
    }

    /* main::before {
      content: "";
      background-color: rgba(0, 0, 82);
      position: absolute;
      top: 0;
      opacity: 0.9;
      mix-blend-mode: multiply;
    } */

    .world-map {
      width: auto;
      justify-content: center;
      margin-top: 60px;
    }

    .world-map-globe {
      height: 250px;
      width: 80%;
    }
    .hero-text h1 {
      font-size: 48px;
    }
  }

  @media screen (min-width: 800px, max-width: 5000px;) {
    main {
      width: 80vw;
    }
  }
</style>
