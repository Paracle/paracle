---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
---

<Layout title="contact">
  <main>
    <header>
      <Navbar logo={false} svgcolor="black" background={true} />
    </header>

    {/*hero section */}
    <section class="contact">
      <p>Contact us</p>
    </section>

    {/*form */}
    <section class="contact-form">
      <form>
        <input type="text" placeholder="Name" />
        <input type="text" placeholder="Subject" />
        <textarea cols="10" rows="10" placeholder="Type your message here"
        ></textarea>
        <button>Send message</button>
      </form>
    </section>
    <Footer />
  </main>
</Layout>

<style>
  .contact {
    width: 80vw;
    margin: 0px auto;
    height: 30vh;
    background-image: url("../components/images/hero.jpg");
    background-position: 150px 150px;
    display: flex;
    justify-content: center;
    align-items: center;

    & p {
      font-size: 48px;
    }
  }

  .contact-form {
    width: 80vw;
    margin: 150px auto;
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
  }

  form {
    display: flex;
    flex-flow: column nowrap;
    gap: 20px;
    width: 40%;
    background-color: white;
    padding: 40px;
    box-shadow: 0 8px 22px 0 rgba(0, 0, 0, 0.1);
    border-radius: 20px;
    & input {
      padding: 12px 16px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    & textarea {
      padding: 16px;
      border-radius: 8px;
    }

    & button {
      padding: 12px 16px;
      background-color: orange;
      border: none;
      border-radius: 8px;
      font-weight: 800;
    }
  }

  @media screen and (max-width: 800px) {
    .contact {
      width: 100%;
      margin: 0 auto;
    }

    form {
      display: flex;
      flex-flow: column nowrap;
      gap: 20px;
      width: 100%;
    }
  }
</style>
