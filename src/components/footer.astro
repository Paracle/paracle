---
import Layout from "../layouts/Layout.astro";
import Logo from "./logo.astro";
import LogoWhite from "./icons/logoWhite.astro";
---

<Layout title="footer">
  <footer>
    <section>
      {/*logo */}
      <div style="width: 100px; height:auto">
        <Logo logo={true} />
      </div>

      <div>
        <p>Our Company</p>
        <ul>
          <li><a href="/about">About</a></li>
          <li><a href="/services">Services</a></li>
          <li><a href="our-team">Our team</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      <div>
        <p>Get in touch</p>
        <ul>
          <li>
            <a
              href="https://www.facebook.com/ParacletworldServiceLimited"
              target="_blank">Facebook</a
            >
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/paracletworldservicelimited"
              target="_blank">LinkedIn</a
            >
          </li>
        </ul>
      </div>

      <div>
        <p>Contact us</p>
        <p>House 15 Wumba Apo Abuja, Nigeria</p>
        <p>+234(0)8131888798</p>
        <p>paracletworld.1@gmail.com</p>
        <p>RC 1974379</p>
      </div>
    </section>
  </footer>
</Layout>

<style>
  footer {
    background-color: darkblue;
  }

  section {
    display: flex;
    justify-content: space-between;
    width: 80vw;
    margin: 0 auto;
    padding: 60px;

    & div {
      justify-content: start;
      color: white;

      & p:first-child {
        font-size: 24px;
        font-weight: bold;
        margin-top: 0;
      }
    }
  }

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    list-style-type: none;
    width: 100%;
    padding: 10px 0;
  }

  a {
    text-decoration: none;
    color: white;
  }

  a:active {
    color: orange;
  }

  a:hover {
    color: orange;
  }

  @media screen and (max-width: 800px) {
    section {
      display: flex;
      flex-flow: column;
      justify-content: space-between;
      width: 100%;
      padding: 60px 0px;

      & div {
        margin: 24px;
      }
    }
  }
</style>
